@using Resources
@using Website.Areas.CMS.Models
@using Website.Common
@model Website.Models.User

@{
    ViewBag.Title = "NewUser";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
    var user = (UserViewModel)HttpContext.Current.Session["User"];
    var ui = new UI();
    var lstLabel = ui.GetLabelForPage(user.LanguaeId, (int)Pages.Layout);
}

<h2>
    @lstLabel.First(o => o.LabelKey == LabelResources.NewUserText).LabelName
</h2>

@using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="col-md-8">
            <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2 " })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.UserName, new { @class = "control-label col-md-4" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <span class="col-md-1 required"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PassWord, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PassWord)
                    @Html.ValidationMessageFor(model => model.PassWord)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Lock, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.Lock, new { @checked = "checked" })
                    @Html.ValidationMessageFor(model => model.Lock)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Roles, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Roles)
                    @Html.ValidationMessageFor(model => model.Roles)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default pull-right" />
                </div>
            </div>
        </div>
    </div>
}

