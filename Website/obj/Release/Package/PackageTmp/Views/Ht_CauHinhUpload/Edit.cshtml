@model S4T_HaTinh.Models.Ht_CauHinhUpload

@{
    ViewBag.Title = "Sửa";
    var listDonVi = new SelectList(ViewBag.ListDonVi, "DonVi_ID", "TenDonVi");
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
