@model S4T_HaTinh.Models.TinhHinhSXDN

@{
    ViewBag.Title = "TÌNH HÌNH SẢN XUẤT KINH DOANH CỦA CÁC DN TRÊN ĐỊA BÀN TỈNH";
}
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Đơn vị: @ViewBag.TenDonVi được tạo mới dữ liệu từ ngày @String.Format("{0:dd/MM/yyyy}",@ViewBag.TuNgay) đến ngày @String.Format("{0:dd/MM/yyyy}", @ViewBag.DenNgay)</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.DonVi_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("txtTenDonVi", (string)ViewBag.TenDonVi, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.DonVi_ID)
                    @Html.ValidationMessageFor(model => model.DonVi_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Success, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Success)
                    @Html.TextBox("txtSuccess", "Thêm mới", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Success, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("lblDiaChi", "Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("txtDiaChi", (string)ViewBag.DiaChi, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NguoiDaiDien, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NguoiDaiDien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NguoiDaiDien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("lblSoDienThoai", "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("txtSoDienThoai", (string)ViewBag.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("lblNganhNghe", "Ngành nghề kinh doanh", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("txtNganhNghe", (string)ViewBag.NganhNghe, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThuNhapTrungBinh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThuNhapTrungBinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThuNhapTrungBinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("lblQuyMo", "Quy mô", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("txtQuyMo", (string)ViewBag.QuyMo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DoanhThu, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DoanhThu, new { htmlAttributes = new { @class = "form-control" } }) VND
                    @Html.ValidationMessageFor(model => model.DoanhThu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TienNopThue, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TienNopThue, new { htmlAttributes = new { @class = "form-control" } }) VND
                    @Html.ValidationMessageFor(model => model.TienNopThue, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <table class="tableDefault">
                    <tr>
                        <th>Nhân lực</th>
                        <th>Đại học</th>
                        <th>Cao đẳng</th>
                        <th>Trung cấp</th>
                        <th>Tiến sĩ</th>
                        <th>Thạc sĩ</th>
                        <th>Khác</th>
                    </tr>
                    <tr>
                        <td>Trong ngành</td>
                        <td>@Html.TextBoxFor(model => model.NLTN_DaiHoc, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLTN_CaoDang, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLTN_TrungCap, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLTN_TienSi, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLTN_ThacSi, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLTN_Khac, new { style = "width:60px;" })</td>
                    </tr>
                    <tr>
                        <td>Ngoài ngành</td>
                        <td>@Html.TextBoxFor(model => model.NLNN_DaiHoc, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLNN_CaoDang, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLNN_TrungCap, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLNN_TienSi, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLNN_ThacSi, new { style = "width:60px;" })</td>
                        <td>@Html.TextBoxFor(model => model.NLNN_Khac, new { style = "width:60px;" })</td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DongGopXaHoi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DongGopXaHoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DongGopXaHoi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.KienNghi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.TextArea("txtKienNghi", "", new { @rows = "5", @cols = "45"})*@
                    @Html.TextAreaFor(model => model.KienNghi, new { htmlAttributes = new {  @cols = 45, @rows = 5 } })
                    @Html.ValidationMessageFor(model => model.KienNghi, "", new { @class = "text-danger" })
                </div>
            </div>

            

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }