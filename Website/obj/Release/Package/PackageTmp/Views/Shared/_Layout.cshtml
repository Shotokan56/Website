                            {
                                str.AppendFormat("<li><a href=\"/{0}/{1}\">{2}</a></li>",
                                    chucNang.ControllerName.Trim(), chucNang.ActionName.Trim(), chucNang.TenChucNang);
                            }

                            str.Append("</ul> </div>");
                        }
                    }
                    System.Web.HttpContext.Current.Session["LeftMenu"] = str.ToString();
                    @Html.Raw(str.ToString());
                }
                else
