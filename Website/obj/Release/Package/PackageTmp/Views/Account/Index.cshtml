@model IEnumerable<S4T_HaTinh.Models.EditUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách người dùng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Register")
</p>
<table class="tableDefault">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoVaTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonVi_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonVi_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.UserName }) |
                @Html.ActionLink("Phân quyền", "UserRoles", new { id = item.UserName }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.UserName })
            </td>
        </tr>
    }

</table>
