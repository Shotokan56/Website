        $('a#ShowPopUp').on('click', function (e) {
            e.preventDefault();
            //var rv = $('<div/>', { 'class': 'form-group', 'id': 'link-' + ($(this).index() + 1) })
            var rv = $('<div/>', {
                'class': 'form-group', 'id': 'link-1' 
            })
            .html($('<iframe/>', {
                'id': 'iframeUpload',
                'src': $(this).attr('href'),
                'style': 'width:100%; height:100%;border:none;'
            })).appendTo('body')
