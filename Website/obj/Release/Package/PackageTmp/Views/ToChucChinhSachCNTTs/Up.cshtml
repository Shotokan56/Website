@model S4T_HaTinh.Models.Ht_FileDinhKem
@{
    Layout = null;
}

@Styles.Render("~/Content/Kendo/css")
<script src="~/Scripts/jquery-1.11.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-1.11.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/s4t-hatinh.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.form.js" type="text/javascript"></script>
<link href="~/Content/skin.css" rel="stylesheet" />
<link href="~/Content/default.css" rel="stylesheet" />

<form action="Up" method="post" enctype="multipart/form-data" id="frmUpload">
    @Html.HiddenFor(model => model.LoaiVanBan_ID)
    <div class="form-group">
        @Html.LabelFor(model => model.SoVanBan, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.SoVanBan, new { @class = "form-control" })
        </div>        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TrichYeu, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TrichYeu, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NgayBanHanh)
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NgayBanHanh, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">File Upload:</label>
        <input type="file" id="fileVanBan" name="file"
               @*accept="application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/msword,application/msword,application/vnd.ms-powerpoint,application/vnd.openxmlformats-officedocument.presentationml.presentation"*@ />
        <input type="hidden" id="txtFileName" value="@ViewBag.FileName" />        
    </div>
    <input type="submit" id="btnUpload" value="Upload" />
</form>
@Scripts.Render("~/bundles/kendo")

<script type="text/javascript">
    $(document).ready(function () {
        var start = $("#NgayBanHanh").kendoDatePicker({
            change: startChange
            , format: "dd/MM/yyyy"
        }).data("kendoDatePicker");

        var status = "NOT";
        var fileNames = "";
        @Html.Raw(ViewBag.Status)
        if (status == "OK") {
            window.parent.jQuery('#link-1').dialog('close');
        }
    });
</script>